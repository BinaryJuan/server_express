<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" href="/icon.png"> 
    <link rel="stylesheet" href="/styles.css">
    <title>Product list management</title>
</head>
<body>
    <h2>Product data entry</h2>
    <form id="productForm">
        <label for="title">Title</label>
        <input name="title" id="title" />
        <label for="price">Price</label>
        <input name="price" id="price" type="number" />
        <label for="img">Image URL</label>
        <input name="img" id="img" />
        <button type="submit">Add product</button>
    </form>
    <% if (products.length == 0) { %>
        No products added
    <% } else { %>
        <table class="productsTable">
            <thead>
                <tr class="tableTitles">
                    <th>Title</th>
                    <th>Price</th>
                    <th style="width:300px;">Image</th>
                </tr>
            </thead>
            <tbody id="productList"></tbody>
        </table>
    <% } %>
    <h2>Online chat</h2>
    <div class="messagesContainer">
        <div id="messages"></div>
        <form id="msgForm">
            <input type="text" name="username" id="username" placeholder="Username" min="1" max="20" />
            <input type="text" name="message" id="message" placeholder="Message" min="1" />
            <input type="submit" value="Send" id="sendMsg" />
        </form>
    </div>
    <!-- Scripts -->
    <script src="/socket.io/socket.io.js"></script>
    <script src="main.js" type="text/javascript"></script>
    <!-- Scripts -->
</body>
</html>